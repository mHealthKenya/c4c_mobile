<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/fragment_report_exposure"
    android:background="@android:color/white"
    android:orientation="vertical">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:layout_marginTop="@dimen/spacing_large"
        android:scrollbars="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="@dimen/spacing_large"
            android:paddingRight="@dimen/spacing_large">

            <!--top line-->

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/please_fill_the_information_below"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"/>

            <LinearLayout
                android:layout_width="@dimen/spacing_xlarge"
                android:layout_height="@dimen/spacing_mlarge"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <View
                    android:layout_width="2dp"
                    android:layout_height="match_parent"
                    android:background="@color/grey_10" />

            </LinearLayout>

            <!--section title-->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:id="@+id/step_title"
                        android:layout_width="@dimen/spacing_xlarge"
                        android:layout_height="@dimen/spacing_xlarge"
                        android:background="@drawable/shape_round_solid"
                        android:gravity="center">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="1"
                            android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                            android:textColor="@android:color/white" />

                    </RelativeLayout>

                    <View
                        android:layout_width="2dp"
                        android:layout_height="match_parent"
                        android:background="@color/grey_10"
                        android:minHeight="?attr/actionBarSize" />

                </LinearLayout>

                <View
                    android:layout_width="@dimen/spacing_large"
                    android:layout_height="0dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="?attr/actionBarSize"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_label_title"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/spacing_xlarge"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/spacing_small"
                        android:paddingRight="@dimen/spacing_small"
                        android:text="@string/exposure_details"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                        android:textColor="@color/grey_90" />

                    <LinearLayout
                        android:id="@+id/lyt_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/spacing_large"
                        android:orientation="vertical">

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical">

                                <com.google.android.material.textfield.TextInputLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent">
                                    <com.google.android.material.textfield.TextInputEditText
                                        android:id="@+id/id_no"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        style="@style/EditText.Flat.Grey"
                                        android:inputType="text"
                                        android:hint="Type of exposure. Prick, spill, etc"/>
                                </com.google.android.material.textfield.TextInputLayout>

<!--                                <LinearLayout-->
<!--                                    android:layout_width="match_parent"-->
<!--                                    android:layout_height="wrap_content"-->
<!--                                    android:orientation="horizontal">-->
<!--                                    <Button-->
<!--                                        android:id="@+id/spn_from_date"-->
<!--                                        android:layout_width="0dp"-->
<!--                                        style="@style/Button.Accent.Borderless"-->
<!--                                        android:layout_height="wrap_content"-->
<!--                                        android:layout_weight="1"-->
<!--                                        android:textAlignment="textStart"-->
<!--                                        android:drawableLeft="@drawable/ic_calendar"-->
<!--                                        android:text="@string/date_of_exposure"-->
<!--                                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"-->
<!--                                        android:textColor="@color/grey_80" />-->

<!--                                    <TextView-->
<!--                                        android:id="@+id/tv_exposure_date"-->
<!--                                        android:layout_width="0dp"-->
<!--                                        android:layout_weight="1"-->
<!--                                        android:layout_height="@dimen/spacing_xlarge"-->
<!--                                        android:gravity="center_vertical"-->
<!--                                        android:paddingLeft="@dimen/spacing_small"-->
<!--                                        android:paddingRight="@dimen/spacing_small"-->
<!--                                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"-->
<!--                                        android:textColor="@color/grey_90" />-->


<!--                                </LinearLayout>-->
                                <com.google.android.material.textfield.TextInputLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent">
                                    <com.google.android.material.textfield.TextInputEditText
                                        android:id="@+id/date_et"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        style="@style/EditText.Flat.Grey"
                                        android:inputType="none"
                                        android:clickable="true"
                                        android:hint="@string/date_of_exposure"
                                        android:focusable="true" />
                                </com.google.android.material.textfield.TextInputLayout>


                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                                    android:textColor="@color/grey_90"
                                    android:text="@string/where_did_the_exposure_occur"/>


                                <Spinner
                                    android:id="@+id/exposure_occurrence"
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/spacing_xxlarge"
                                    android:drawSelectorOnTop="true"
                                    android:entries="@array/exposure_occurrence"/>


                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                                    android:textColor="@color/grey_90"
                                    android:text="@string/what_device_was_used"/>


                                <com.toptoche.searchablespinnerlibrary.SearchableSpinner
                                    android:id="@+id/exposure_device"
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/spacing_xxlarge"
                                    android:drawSelectorOnTop="true" />

                                <EditText
                                    android:id="@+id/info_exposure"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="@color/grey_5"
                                    android:gravity="top"
                                    android:hint="@string/provide_more_information_about_exposure"
                                    android:padding="@dimen/spacing_large"
                                    android:textSize="14sp"
                                    android:lines="3"/>


                            </LinearLayout>


                        </androidx.cardview.widget.CardView>


                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <!--section description-->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:id="@+id/step_description"
                        android:layout_width="@dimen/spacing_xlarge"
                        android:layout_height="@dimen/spacing_xlarge"
                        android:background="@drawable/shape_round_solid"
                        android:gravity="center">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="2"
                            android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                            android:textColor="@android:color/white" />

                    </RelativeLayout>

                    <View
                        android:layout_width="2dp"
                        android:layout_height="match_parent"
                        android:background="@color/grey_10" />

                </LinearLayout>

                <View
                    android:layout_width="@dimen/spacing_large"
                    android:layout_height="0dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="?attr/actionBarSize"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_label_description"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/spacing_xlarge"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/spacing_small"
                        android:paddingRight="@dimen/spacing_small"
                        android:text="@string/exposure_history"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                        android:textColor="@color/grey_90" />

                    <LinearLayout
                        android:id="@+id/lyt_description"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/spacing_large"
                        android:orientation="vertical">

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                                    android:textColor="@color/grey_90"
                                    android:text="@string/have_you_ever_been_exposed"/>


                                <Spinner
                                    android:id="@+id/previous_exposure"
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/spacing_xxlarge"
                                    android:drawSelectorOnTop="true"
                                    android:entries="@array/previous_exposure"/>

                                <com.google.android.material.textfield.TextInputLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent">
                                    <com.google.android.material.textfield.TextInputEditText
                                        android:id="@+id/previous_exposures"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        style="@style/EditText.Flat.Grey"
                                        android:inputType="number"
                                        android:hint="@string/how_many_previous_exposures"/>
                                </com.google.android.material.textfield.TextInputLayout>



                                <LinearLayout
                                    android:id="@+id/linearPEP"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:layout_width="0dp"
                                        android:layout_weight="1"
                                        android:layout_height="@dimen/spacing_xlarge"
                                        android:gravity="center_vertical"
                                        android:paddingLeft="@dimen/spacing_small"
                                        android:paddingRight="@dimen/spacing_small"
                                        android:text="@string/was_pep_initiated"
                                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                                        android:textColor="@color/grey_90" />

                                    <Spinner
                                        android:id="@+id/pep"
                                        android:layout_width="0dp"
                                        android:layout_weight="1"
                                        android:layout_height="@dimen/spacing_xxlarge"
                                        android:drawSelectorOnTop="true"
                                        android:entries="@array/pep"/>



                                </LinearLayout>


                                <LinearLayout
                                    android:id="@+id/linearHIV"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:layout_width="0dp"
                                        android:layout_weight="1"
                                        android:layout_height="@dimen/spacing_xlarge"
                                        android:gravity="center_vertical"
                                        android:paddingLeft="@dimen/spacing_small"
                                        android:paddingRight="@dimen/spacing_small"
                                        android:text="@string/patient_s_hiv_status"
                                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                                        android:textColor="@color/grey_90" />

                                    <Spinner
                                        android:id="@+id/patient_hiv"
                                        android:layout_width="0dp"
                                        android:layout_weight="1"                                        android:layout_height="@dimen/spacing_xxlarge"
                                        android:drawSelectorOnTop="true"
                                        android:entries="@array/patient_hiv"/>




                                </LinearLayout>



                                <LinearLayout
                                    android:id="@+id/linearHBV"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:layout_width="0dp"
                                        android:layout_weight="1"
                                        android:layout_height="@dimen/spacing_xlarge"
                                        android:gravity="center_vertical"
                                        android:paddingLeft="@dimen/spacing_small"
                                        android:paddingRight="@dimen/spacing_small"
                                        android:text="@string/patient_s_hbv_status"
                                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                                        android:textColor="@color/grey_90" />

                                    <Spinner
                                        android:id="@+id/patient_hbv"
                                        android:layout_width="0dp"
                                        android:layout_weight="1"
                                        android:layout_height="@dimen/spacing_xxlarge"
                                        android:drawSelectorOnTop="true"
                                        android:entries="@array/patient_hpv"/>


                                </LinearLayout>




                            </LinearLayout>


                        </androidx.cardview.widget.CardView>



                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>


            <Button
                android:id="@+id/btn_submit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_middle"
                android:layout_marginBottom="@dimen/spacing_middle"
                android:background="@drawable/btn_rounded_primary"
                android:text="@string/submit"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                android:textAlignment="center"
                android:textSize="22sp"
                android:textStyle="bold"
                style="@style/Widget.MaterialComponents.Button"/>


            <!--bottom line-->

<!--            <LinearLayout-->
<!--                android:layout_width="@dimen/spacing_xlarge"-->
<!--                android:layout_height="match_parent"-->
<!--                android:gravity="center_horizontal"-->
<!--                android:orientation="vertical">-->

<!--                <View-->
<!--                    android:layout_width="2dp"-->
<!--                    android:layout_height="match_parent"-->
<!--                    android:background="@color/grey_10" />-->

<!--            </LinearLayout>-->

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</LinearLayout>




